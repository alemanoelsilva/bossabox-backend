{
  "name": "shaw-api",
  "version": "1.0.0",
  "description": "API for Shaw's test",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test:coverage": "NODE_ENV=test jest --silent --runInBand --coverage --forceExit ./test/**/*.spec.js",
    "test:unit": "NODE_ENV=test jest --coverage --runInBand --forceExit ./test/unit/*.spec.js",
    "test:integration": "NODE_ENV=test jest --runInBand --coverage --forceExit ./test/integration/*.spec.js",
    "test": "npm run test:coverage"
  },
  "author": "Alexandre Manoel da Silva",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "nodemon": "^1.18.2"
  },
  "devDependencies": {
    "jest": "^22.4.3",
    "jest-plugin-context": "^2.9.0",
    "supertest": "^3.1.0"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "collectCoverageFrom": [
      "api/**/*.js",
      "!**/node_modules/**",
      "!**/config/**"
    ],
    "coverageReporters": [
      "text",
      "text-summary",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFiles": [
      "jest-plugin-context/setup"
    ]
  }
}
